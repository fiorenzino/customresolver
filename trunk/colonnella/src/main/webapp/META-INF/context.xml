<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Manager pathname="" /> <!-- disables storage of sessions across restarts -->
	<Resource name="BeanManager" auth="Container"
		type="javax.enterprise.inject.spi.BeanManager" factory="org.jboss.weld.resources.ManagerObjectFactory" />
	<!-- Uncomment to enable injection into Servlet -->
	<!--
		<Listener
		className="org.jboss.weld.environment.tomcat.WeldLifecycleListener" />
	-->

	<Realm  className="org.apache.catalina.realm.JDBCRealm"
             driverName="com.mysql.jdbc.Driver"
             connectionURL="jdbc:mysql://localhost/colonnella"
             connectionName="colonnella"
             connectionPassword="colonnella"
             userTable="user_auth"
             userNameCol="USERNAME"
             userCredCol="PASSWORD"
             userRoleTable="user_role"
             roleNameCol="ROLE_NAME" 
       />

</Context>
